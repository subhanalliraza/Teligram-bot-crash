name: Run Bot for 10 Minutes (Password Protected)

on:
  workflow_dispatch:
    inputs:
      INPUT_PASSWORD:
        description: "Enter password to run bot"
        required: true
        type: string

jobs:
  run-bot:
    runs-on: ubuntu-latest
    env:
      TELEGRAM_TOKEN: ${{ secrets.TELEGRAM_TOKEN }}
      TELEGRAM_CHAT: ${{ secrets.TELEGRAM_CHAT }}
      WS_URL: ${{ secrets.WS_URL }}
      BOT_PASSWORD: ${{ secrets.BOT_PASSWORD }}
      INPUT_PASSWORD: ${{ github.event.inputs.INPUT_PASSWORD }}
    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: 3.10

      - name: Install dependencies
        run: pip install websocket-client requests

      - name: Run bot
        run: python main.py
